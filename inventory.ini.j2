[{{ project }}]
{% for instance in ec2_instances.instances %}
node{{ loop.index }} ansible_host={{ instance.public_ip_address }}
{% endfor %}

[{{ project }}:vars]
project={{ project }}
env={{ env }}
ansible_user=ec2-user
ansible_port=22
ansible_ssh_private_key_file={{ project }}-{{ env }}.pem
ansible_ssh_common_args="-o StrictHostKeyChecking=no"
